# Demo Mode - set to "true" to serve mock data locally (no external services needed)
DEMO_MODE=false

# Better Auth - required for authentication
# Generate secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your_secret_here_min_32_chars
BETTER_AUTH_URL=http://localhost:5173

# Turso Database (libSQL) - for auth storage
# Create a free database at: https://turso.tech
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your_turso_auth_token

# OAuth Providers (optional)
# Google: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# GitHub: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# BaseLinker API
# Get your token from: BaseLinker → My Account → API
BASELINKER_API_TOKEN=your_baselinker_api_token_here

# Payment - Przelewy24 (optional)
P24_MERCHANT_ID=
P24_POS_ID=
P24_CRC=
P24_API_KEY=
